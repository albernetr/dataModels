{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://smartsdk.github.io/dataModels/OpenHealthContext/PhysicalTest/schema.json",
  "title": "FIWARE - Physical test schema",
  "description": "Represents a physical test performed. It concentrates sensor data collected along a controlled test from a physical device carried/worn by a user while performing a supervised physical test.",
  "type": "object",
  "references": [
    {
      "description": "This schema has been created to fulfill the technical fetching need of mobile devicesâ€™ sensors used on physical test aimed to measure the risk of fall.",
      "url": "Pending to be included."
    }
  ],
  "definitions": {
    "id": {
      "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/EntityIdentifierType"
    },
    "type": {
      "description": "NGSI Entity type",
      "type": "string",
      "enum": [
        "PhysicalTest"
      ]
    },
    "testType": {
      "description": "Physical test to measure risk of fall.",
      "type": "string",
      "references": [
        {
          "value": "Timed Up and Go",
          "description": "Rehab Measures: Timed Up and Go",
          "url": "http://www.rehabmeasures.org/Lists/RehabMeasures/PrintView.aspx?ID=903"
        },
        {
          "value": "30 second sit to stand test",
          "description": "Rehab Measures: 30 second sit to stand test",
          "url": "http://www.rehabmeasures.org/Lists/RehabMeasures/DispForm.aspx?ID=1122"
        },
        {
          "value": "4-Stage Balance Test",
          "description": "Rehab Measures: 4-Stage Balance Test",
          "url": "https://www.cdc.gov/steadi/pdf/4-stage_balance_test-a.pdf"
        }
      ],
      "enum": [
        "Timed Up and Go",
        "30 second sit to stand test",
        "4-Stage Balance Test"
      ]
    },
    "balanceTestType": {
      "description": "Physical test to measure risk of fall by assess static balance.",
      "type": "string",
      "references": [
        {
          "value": "Side by Side",
          "description": "Rehab Measures: Timed Up and Go.",
          "url": "https://www.med.unc.edu/aging/cgec/exercise-program/medicare-coding-guides-for-fall-risk-related-impairments/G-Codes_Four-Stage-Balance-Test.pdf"
        },
        {
          "value": "Semi-Tandem",
          "description": "Rehab Measures: 30 second sit to stand test.",
          "url": "https://www.med.unc.edu/aging/cgec/exercise-program/medicare-coding-guides-for-fall-risk-related-impairments/G-Codes_Four-Stage-Balance-Test.pdf"
        },
        {
          "value": "Tandem (Full)",
          "description": "Rehab Measures: Four Step Square Test.",
          "url": "https://www.med.unc.edu/aging/cgec/exercise-program/medicare-coding-guides-for-fall-risk-related-impairments/G-Codes_Four-Stage-Balance-Test.pdf"
        },
        {
          "value": "Single-Leg Stance",
          "description": "Rehab Measures: Four Step Square Test.",
          "url": "https://www.med.unc.edu/aging/cgec/exercise-program/medicare-coding-guides-for-fall-risk-related-impairments/G-Codes_Four-Stage-Balance-Test.pdf"
        }
      ],
      "enum": [
        "Side by Side",
        "Semi-Tandem",
        "Tandem (Full)",
        "Single-Leg Stance"
      ]
    },
    "refUser": {
      "type": "string",
      "format": "uri"
    },
    "category": {
      "description": "Device's category(ies).",
      "type": "string",
      "references": [
        {
          "value": "sensor",
          "description": "A device that detects and responds to events or changes in the physical environment such as light, motion, or temperature changes.",
          "url": "https://w3id.org/saref#Sensor"
        },
        {
          "value": "actuator",
          "description": "A device responsible for moving or controlling a mechanism or system.",
          "url": "https://w3id.org/saref#Actuator"
        },
        {
          "value": "meter",
          "description": "A device built to accurately detect and display a quantity in a form readable by a human being. Partially defined by SAREF.",
          "url": "http://ontology.tno.nl/saref/#Meter"
        },
        {
          "value": "HVAC",
          "description": "Heating, Ventilation and Air Conditioning (HVAC) device that provides indoor environmental comfort.",
          "url": "https://w3id.org/saref#HVAC"
        },
        {
          "value": "network",
          "description": "A device used to connect other devices in a network, such as hub, switch or router in a LAN or Sensor network.",
          "url": "https://w3id.org/saref#Network"
        },
        {
          "value": "multimedia",
          "description": "A device designed to display, store, record or play multimedia content such as audio, images, animation, video.",
          "url": "https://w3id.org/saref#Multimedia"
        },
        {
          "value": "smartphone",
          "description": "A specific product line (such as iPhone) that performs many of the functions of a computer, typically having a touchscreen interface, Internet access, and an operating system capable of running downloaded apps.",
          "url": "https://schema.org/ContactPoint"
        }
      ],
      "enum": [
        "sensor",
        "actuator",
        "meter",
        "HVAC",
        "network",
        "multimedia",
        "medicalDevice",
        "smartphone"
      ]
    },
    "controlledProperty": {
      "description": "Anything that can be sensed, measured or controlled by.",
      "type": "string",
      "enum": [
        "temperature",
        "humidity",
        "light",
        "motion",
        "fillingLevel",
        "occupancy",
        "power",
        "pressure",
        "smoke",
        "energy",
        "airPollution",
        "noiseLevel",
        "weatherConditions",
        "precipitation",
        "windSpeed",
        "windDirection",
        "barometricPressure",
        "solarRadiation",
        "depth",
        "pH",
        "pressure",
        "conductivity",
        "conductance",
        "tss",
        "tds",
        "turbidity",
        "salinity",
        "orp",
        "cdom",
        "waterPollution",
        "location",
        "speed",
        "heading",
        "weight",
        "waterConsumption",
        "gasComsumption",
        "electricityConsumption",
        "acceleration",
        "orientation"
      ]
    },
    "osVersion": {
      "type": "string"
    },
    "softwareVersion": {
      "type": "string"
    },
    "hardwareVersion": {
      "type": "string"
    },
    "firmwareVersion": {
      "type": "string"
    },
    "function": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": false
    },
    "brandName": {
      "type": "string"
    },
    "modelName": {
      "type": "string"
    },
    "manufacturerName": {
      "type": "string"
    },
    "value": {
      "type": "string"
    },
    "configuration": {
      "type": "object"
    },
    "dateTestStarted": {
      "type": "string",
      "format": "date-time"
    },
    "dateTestEnded": {
      "type": "string",
      "format": "date-time"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "type": {
      "$ref": "#/definitions/type"
    },
    "testType": {
      "$ref": "#/definitions/testType"
    },
    "balanceTestType": {
      "$ref": "#/definitions/balanceTestType"
    },
    "refUser": {
      "$ref": "#/definitions/refUser"
    },
    "category": {
      "$ref": "#/definitions/category"
    },
    "controlledProperty": {
      "$ref": "#/definitions/controlledProperty"
    },
    "osVersion": {
      "$ref": "#/definitions/osVersion"
    },
    "softwareVersion": {
      "$ref": "#/definitions/softwareVersion"
    },
    "hardwareVersion": {
      "$ref": "#/definitions/hardwareVersion"
    },
    "firmwareVersion": {
      "$ref": "#/definitions/firmwareVersion"
    },
    "function": {
      "$ref": "#/definitions/function"
    },
    "brandName": {
      "$ref": "#/definitions/brandName"
    },
    "modelName": {
      "$ref": "#/definitions/modelName"
    },
    "manufacturerName": {
      "$ref": "#/definitions/manufacturerName"
    },
    "value": {
      "$ref": "#/definitions/value"
    },
    "configuration": {
      "$ref": "#/definitions/configuration"
    },
    "dateTestStarted": {
      "$ref": "#/definitions/dateTestStarted"
    },
    "dateTestEnded": {
      "$ref": "#/definitions/dateTestEnded"
    }
  },
  "required": [
    "id",
    "type",
    "testType",
    "refUser",
    "category",
    "controlledProperty",
    "osVersion",
    "softwareVersion",
    "hardwareVersion",
    "firmwareVersion",
    "function",
    "brandName",
    "modelName",
    "manufacturerName",
    "value",
    "configuration",
    "dateTestStarted",
    "dateTestEnded"
  ]
}
